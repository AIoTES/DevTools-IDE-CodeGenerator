<?xml version="1.0" encoding="UTF-8"?>
<Template
		xmlns="http://www.example.org/prueba2"
		xmlns:x="http://www.w3.org/2001/XMLSchema-instance"
		x:schemaLocation="http://www.example.org/prueba2 xsd.xsd">
		<template-name>template1</template-name>
		<template-version>1</template-version>
		<template-description>error</template-description>
		<template-author>
			<author-name>eduardo</author-name>
			<author-email>buhid</author-email>
			<author-phone>123523</author-phone>
		</template-author>

		<variables>
			<variable>
				<name>outputBaseDir</name>
				<default></default>
				<required>false</required>
				<description>"variable to set outputBaseDir"</description>
			</variable>

			<variable>
				<name>targetOS</name>
				<default>Linux</default>
				<required>false</required>
				<description>"variable containing target operating system"</description>

			</variable>

			<variable>
				<name>templateCount</name>
				<default>0</default>
				<required>false</required>
				<description>"variable to set template count"</description>
			</variable>


			<variable>
				<name>ontologyCount</name>
				<default>0</default>
				<required>false</required>
				<description>"variable to set ontology count"</description>
			</variable>

		</variables>
		<macros>
		
			<macro>
				<template>project.vm</template>
				<for>project</for>
				<output>projectOutput</output>
			</macro>
			<macro>
				<template>ontology.vm</template>
				<for>Ontology</for>
				<output>ontologyOutput</output>
				<imports>     
					<FullyQualifiedName>org.semanticweb.owlapi.model.AxiomType</FullyQualifiedName> 
				</imports> 
			</macro>
		
			<macro>
				<template>classes.vm</template>
				<for>Class</for>
				<output>classes/${class.getIRI().getShortForm()}</output>
				<imports>     
					<FullyQualifiedName>org.semanticweb.owlapi.model.AxiomType</FullyQualifiedName> 
				</imports> 
			</macro>
			<macro>
				<template>classes2.vm</template>
				<for>Class</for>
				<output>classes2/${class.getIRI().getFragment()}</output>
				<imports>     
					<FullyQualifiedName>org.semanticweb.owlapi.model.AxiomType</FullyQualifiedName> 
				</imports> 
			</macro>

			 <macro>
				<template>Annotations.vm</template>
				<for>Annotations</for>
				<output>AnnotationsDirectory</output>

			</macro>
			<macro>
				<template>NamedIndividuals.vm</template>
				<for>NamedIndividual</for>
				<output>instancesDirectory/${instance.getIRI().getFragment()}</output>

			</macro>
		</macros>
</Template>

